     var options = {
   maximumImagesCount: 1,
   width: 100,
   height: 100,
    destinationType: Camera.DestinationType.DATA_URL,
      sourceType: Camera.PictureSourceType.PHOTOLIBRARY,
      allowEdit: true,
      encodingType: Camera.EncodingType.JPEG,
   quality: 80
  };
  $cordovaImagePicker.getPictures(options)
    .then(function (results) {
      for (var i = 0; i < results.length; i++) {
        console.log('Image URI: ' + results[i]);
        $scope.pictureURL = "data:image/jpeg;base64,"+results[i];
        console.log($scope.pictureURL);
         var mydata = {};
        mydata.id = $scope.userInfo.id;
         mydata.person_profile_img = results[i];
         $http.put('http://52.69.108.195:1337/person/'+mydata.id,mydata).success(function (response){
          $localStorage.userdata.user.person = response.updated_person;
        })
      }
    }, function(error) {
      // error getting photos
    });
